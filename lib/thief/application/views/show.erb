  </tr>
  <tr>
    <td>Nationality</td>
    <td><%= @person.nationality %></td>
  </tr>
  <tr>
    <td>Religion</td>
    <td><%= @person.religion %></td>
  </tr>
  <tr>
    <td>Profession</td>
    <td><%= @person.profession %></td>
  </tr>
  <tr>
    <td>Alternative Name</td>
    <td><%= @person.alternative_name %></td>
  </tr>
  <tr>
